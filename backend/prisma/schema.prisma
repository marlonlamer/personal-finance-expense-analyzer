generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Expense {
  id        Int      @id @default(autoincrement())
  title     String
  amount    Float
  category  String
  date      DateTime @default(now())

  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Income {
  id        Int      @id @default(autoincrement())
  title     String
  amount    Float
  source    String
  date      DateTime @default(now())

  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  date      DateTime  @default(now())

  expenses  Expense[]
  income    Income[]
}



